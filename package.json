{
  "name": "frontend-skelton",
  "version": "1.0.0",
  "description": "frontend-skelton",
  "main": "index.js",
  "scripts": {
    "build:js": "browserify -t babelify src/js/main.js > public/bundle.js",
    "release:js": "browserify -t babelify src/js/main.js | uglifyjs > public/bundle.js",
    "watch:js": "watchify -v -t babelify src/js/main.js -o public/bundle.js",
    "build:css": "stylus -c src/styl/main.styl -o public/bundle.css -m",
    "release:css": "stylus -c src/styl/main.styl -o public/bundle.css",
    "watch:css": "watch 'npm run build:css' src/styl/",
    "watch": "npm run watch:css & npm run watch:js & npm run server",
    "release": "npm run clear & npm run release:css && npm run release:js",
    "server": "browser-sync start --server public/ --files 'public/*.html,public/bundle.js,public/bundle.css' --delay-reload 250",
    "clear": "rm -f public/bundle.*",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yukku0423/frontend-skelton.git"
  },
  "author": "Yoshiyuki Ieyama",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.3.0",
    "browser-sync": "^2.8.2",
    "browserify": "^11.0.1",
    "coffeeify": "^1.1.0",
    "csso": "^1.3.11",
    "stylus": "^0.52.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  }
}
